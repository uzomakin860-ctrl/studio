
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    match /users/{userId} {
      allow read, write: if isSignedIn() && request.auth.uid == userId;
    }

    match /videos/{videoId} {
      // Anyone can read videos
      allow read: if true;
      // Only authenticated users can create videos
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      // Only the user who created the video can update or delete it
      allow update, delete: if isSignedIn() && resource.data.userId == request.auth.uid;

      match /interactions/{interactionId} {
        // Anyone can read interactions
        allow read: if true;
        // Only authenticated users can create interactions (likes/comments)
        allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
        // Only the user who created the interaction can delete it
        allow delete: if isSignedIn() && resource.data.userId == request.auth.uid;
        // Users cannot update interactions, only create or delete them
        allow update: if false;
      }
    }
  }
}
